<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="LaunchTheme" parent="MainTheme">
    <item name="android:windowBackground">@color/launcher_background</item>
  </style>

  <style name="MainTheme" parent="MainTheme.Base">
  </style>

  <style name="MainTheme.Base" parent="Theme.AppCompat">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
    <item name="android:navigationBarColor">@color/colorPrimary</item>
    <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
  </style>

  <style name="MainTheme.Light" parent="MainTheme.Base.Light">
  </style>

  <style name="MainTheme.Base.Light" parent="Theme.AppCompat.Light">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
    <item name="android:navigationBarColor">@color/colorPrimary</item>
    <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
  </style>

  <style name="MainTheme.Splash" parent ="Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">@drawable/launch_screen</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:navigationBarColor">@color/launcher_background</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppToolbarStyle" parent="Theme.AppCompat.NoActionBar">
    <item name="android:colorBackground">@color/colorPrimary</item>
    <item name="android:textColor">#FFF</item>
  </style>
  
</resources>